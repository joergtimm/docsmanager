                                <td class="py-2">{{ video.createAt|date('d.m.Y') }}</td>
                            </tr>
                            <tr>
                                <td class="py-2 pl-6 font-medium">Update At</td>
                                <td class="py-2">{{ video.updateAt|date('d.m.Y') }}</td>
                            </tr>
                            <tr>
                                <td class="py-2 pl-10">Status</td>
                                <td class="py-2">{{ include('video/_online-badge.html.twig', {item: video}) }}</td>
                            </tr>
