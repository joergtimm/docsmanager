{% extends 'base.html.twig' %}

{% block title %}Video {% endblock %}

{% block main_content %}
    <!-- Start coding here -->
    <turbo-frame id="main_content">
        <div class="relative bg-white shadow-md dark:bg-gray-800 sm:rounded-lg p-2">
            <h1 class="text-4xl dark:tesxt-gray-50 m-3">Video</h1>
        </div>
        <div class="border-2 border-solid rounded-lg border-gray-100 dark:border-gray-600 h-full mb-4 p-3">
            <div class="mx-auto grid grid-cols-12 gap-4 bg-zinc-50 dark:bg-gray-800 p-1">
                <div class="col-span-12 rounded-lg bg-gray-50 dark:bg-gray-800 p-2 sm:col-span-8">
                    <!-- Main Content -->

                    <div class="rounded shadow-md dark:text-gray-50 mx-auto mt-4 p-4">
                        <div class="text-2xl font-bold">{{ video.title }}</div>
                        <table class="table w-full">
                            <tbody>
                            <tr>

                            </tr>
                            <tr>
                                <td class="py-2 pl-6 font-medium">Create At:</td>
                                <td class="py-2">{{ video.createAt|date('d.m.Y') }}</td>
                            </tr>
                            <tr>
                                <td class="py-2 pl-6 font-medium">Update At</td>
                                <td class="py-2">{{ video.updateAt|date('d.m.Y') }}</td>
                            </tr>
                            <tr>
                                <td class="py-2 pl-6 font-medium">Video-Key</td>
                                <td class="py-2">

                                    <div class="w-full max-w-[16rem]">
                                        <div class="relative" {{ stimulus_controller('clipboard', { contenttype: 'input', html: false }) }}>
                                            <label for="npm-install-copy-text" class="sr-only">Label</label>
                                            <input {{ stimulus_target('clipboard', 'input')}} id="npm-install-copy-text" type="text" class="col-span-6 bg-gray-50 border border-gray-300 text-gray-500 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-2.5 py-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" value="{{ video.videoKey }}" disabled readonly>
                                            <button {{ stimulus_target('clipboard', 'trigger')}} {{ stimulus_action('clipboard', 'copy', 'click')}} class="absolute end-2.5 top-1/2 -translate-y-1/2 text-gray-900 dark:text-gray-400 hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-600 dark:hover:bg-gray-700 rounded-lg py-2 px-2.5 inline-flex items-center justify-center bg-white border-gray-200 border">
            <span id="default-message" class="inline-flex items-center">
                <svg class="w-3 h-3 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
                    <path d="M16 1h-3.278A1.992 1.992 0 0 0 11 0H7a1.993 1.993 0 0 0-1.722 1H2a2 2 0 0 0-2 2v15a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2Zm-3 14H5a1 1 0 0 1 0-2h8a1 1 0 0 1 0 2Zm0-4H5a1 1 0 0 1 0-2h8a1 1 0 1 1 0 2Zm0-5H5a1 1 0 0 1 0-2h2V2h4v2h2a1 1 0 1 1 0 2Z"></path>
                </svg>
                <span class="text-xs font-semibold">Copy</span>
            </span>
                                                <span id="success-message" class="hidden inline-flex items-center">
                <svg class="w-3 h-3 text-blue-700 dark:text-blue-500 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"></path>
                </svg>
                <span class="text-xs font-semibold text-blue-700 dark:text-blue-500">Copied</span>
            </span>
                                            </button>
                                        </div>
                                    </div>
                                    </td>
                            </tr>
                            <tr>
                                <td class="py-2 pl-6 font-medium">API Test</td>
                                <td class="py-2">
                                    <a href="{{ path('app_api_video_show', {videoKey: video.videoKey}) }}" target="_blank">
                                        json
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td class="py-2 pl-10">Status</td>
                                <td class="py-2">{{ include('video/_online-badge.html.twig', {item: video}) }}</td>
                            </tr>
                             <tr>
                                <td class="py-2 pl-10">Participants</td>
                                <td class="py-2">
                                    <div class="flex items-center -space-x-4">
                                        {% for videoActor in video.videoActors %}
                                            <div
                                                    data-controller="popover"
                                                    data-action="mouseenter->popover#show mouseleave->popover#hide"
                                                    class="relative"
                                            >
                                                <img
                                                        alt="{{ videoActor.actor.id }}-{{ videoActor.actor.name }}"
                                                        src="{{ asset('img/'~videoActor.actor.profilepic) }}"
                                                        class="relative inline-block h-12 w-12 rounded-full border-2 border-white object-cover object-center hover:z-10 focus:z-10"
                                                />
                                                <template data-popover-target="content">
                                                    <div
                                                            data-popover-target="card"
                                                            class="max-w-sm rounded shadow-lg bg-white absolute left-0 z-50"
                                                            style="bottom: 2rem; width: max-content;"
                                                    >
                                                        <turbo-frame loading="lazy" id="actor-pop-card-{{ videoActor.actor.id }}" target="_top"
                                                                     src="{{ path('app_actor_show_popcard', {
                                                                         'id': videoActor.actor.id,
                                                                     }) }}">
                                                            <div class="p-10">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="animate-spin" width="24"
                                                                     height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                                                     fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M12 3a9 9 0 1 0 9 9"></path>
                                                                </svg>
                                                            </div>
                                                        </turbo-frame>
                                                    </div>
                                                </template>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="{{  }}">
                        <div class="border-b-2 block md:flex">
                            <div class="w-full bg-white dark:bg-gray-800 dark:text-gray-50 shadow-md">
                                {% for partic in video.videoActors %}
                                    {{ include('participant/_videocard.html.twig') }}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-span-12 rounded-lg border border-gray-400 bg-gray-200 p-3 sm:col-span-4 dark:bg-gray-800 dark:text-gray-50">
                    <!-- Sidebar -->
                    <div>
                        <h1>Videoplayer</h1>
                        {% if video.isverrifyted %}
                            <script src="https://cdn.jwplayer.com/players/gKXpcb4h-rlG78VZV.js"></script>
                        {% else %}
                        <p>Nicht freigegeben</p>
                        {% endif %}
                    </div>
                </div>
                {#
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
                #}
            </div>
        </div>
    </turbo-frame>
{% endblock %}
