                                        {% for videoActor in video.videoActors %}
                                            <div
                                                    data-controller="popover"
                                                    data-action="mouseenter->popover#show mouseleave->popover#hide"
                                                    class="relative"
                                            >
                                                <img
                                                        alt="{{ videoActor.actor.id }}-{{ videoActor.actor.name }}"
                                                        src="{{ asset('img/'~videoActor.actor.profilepic) }}"
                                                        class="relative inline-block h-12 w-12 rounded-full border-2 border-white object-cover object-center hover:z-10 focus:z-10"
                                                />
