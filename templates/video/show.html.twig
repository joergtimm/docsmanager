                        <div class="border-b-2 block md:flex">
                            <div class="w-full md:w-2/5 p-4 sm:p-6 lg:p-8 bg-white shadow-md">
                                {% for partic in video.videoActors %}
                                    {{ include('participant/_videocard.html.twig') }}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-span-12 rounded-lg border border-gray-400 bg-gray-200 p-3 sm:col-span-4">
                    <!-- Sidebar -->
                    <div>
                        <h1>Videoplayer</h1>
                        {% if video.isverrifyted %}
                        <script src="https://cdn.jwplayer.com/players/LHndc4SE-7B8RK64Y.js"></script>
                        {% else %}
                        <p>Nicht freigegeben</p>
                        {% endif %}
                    </div>
                    <section class="bg-gray-50 dark:bg-gray-900 py-3 sm:py-5">
                        <div class="px-4 mx-auto max-w-screen-2xl lg:px-12">
                            <div class="relative overflow-hidden bg-white shadow-md dark:bg-gray-800 sm:rounded-lg">
                                <div class="flex flex-col px-4 py-3 space-y-3 lg:flex-row lg:items-center lg:justify-between lg:space-y-0 lg:space-x-4">
                                    <div class="flex flex-col flex-shrink-0 space-y-3 md:flex-row md:items-center lg:justify-end md:space-y-0 md:space-x-3">
