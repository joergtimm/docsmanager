<tr id="video-list-item-{{ item.id }}"
    class="bg-white even:bg-gray-50 border-b dark:bg-gray-800 even:dark:bg-gray-700 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600">
    <td class="w-4 p-4">
        <div class="flex items-center">
            <input id="checkbox-table-search-{{ item.id }}" type="checkbox"
                   data-checkbox-select-all-target="checkbox" value="{{ item.id }}"
                   class="w-4 h-4 text-red-600 dark:bg-gray-200 border-gray-300 dark:border-red-600 rounded focus:ring-red-500 dark:focus:ring-red-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
            <label for="checkbox-table-search-{{ item.id }}" class="sr-only">checkbox</label>
        </div>
    </td>
    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
        <a href="{{ path('app_video_show', { id: item.id }) }}" target="_top" class="mb-0 font-semibold leading-tight">{{ item.title }}</a>
    </th>
    <td class="px-6 py-4">
        <p class="mb-0 font-semibold leading-tight text-xs">{{ item.owner.name }}</p>
        <p class="mb-0 leading-tight text-xs text-slate-400">{{ item.owner.company }}</p>
    </td>
    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
        <div class=" min-h-[50px] w-full overflow-x-scroll rounded-lg  lg:overflow-visible">
            <div class="flex items-center -space-x-4">
                {#
                {% for videoActor in item.videoActors %}
                    <div
                            data-controller="popover"
                            data-action="mouseenter->popover#show mouseleave->popover#hide"
                            class="relative"
                    >
                        <img
                        alt="{{ videoActor.actor.id }}-{{ videoActor.actor.name }}"
                        src="{{ vich_uploader_asset(videoActor.actor) }}"
                        class="relative inline-block h-12 w-12 rounded-full border-2 border-white object-cover object-center hover:z-10 focus:z-10"
                        />
                        <template data-popover-target="content">
                            <div
                                    data-popover-target="card"
                                    class="max-w-sm rounded shadow-lg bg-white absolute left-0 z-50"
                                    style="bottom: 2rem; width: max-content;"
                            >
                                <turbo-frame loading="lazy" id="actor-pop-card-{{ videoActor.actor.id }}" target="_top"
                                             src="{{ path('app_actor_show_popcard', {
                                                 'id': videoActor.actor.id,
                                             }) }}">
                                    <div class="p-10">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="animate-spin" width="24"
                                             height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M12 3a9 9 0 1 0 9 9"></path>
                                        </svg>
                                    </div>
                                </turbo-frame>
                            </div>
                        </template>
                    </div>

                {% endfor %}
                #}
            </div>
        </div>
    </td>
    <td class="px-6 py-4">
        <p class="mb-0 font-semibold leading-tight text-xs">{{ item.createAt|ago }}</p>
        <p class="mb-0 leading-tight text-xs text-slate-400">{{ item.updateAt|ago }}</p>
    </td>
    <td class="px-6 py-4">
        {{ include('video/_online-badge.html.twig') }}
    </td>
    <td class="px-6 py-4 whitespace-nowrap flex">
        <twig:Button
                tag="a"
                variant="link"
                href="{{ path('app_video_edit', {'id': item.id}) }}"
                data-turbo-frame="modal"
                class="flex items-center font-bold"
        >
            <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                 fill="currentColor" viewBox="0 0 20 20">
                <path d="m13.835 7.578-.005.007-7.137 7.137 2.139 2.138 7.143-7.142-2.14-2.14Zm-10.696 3.59 2.139 2.14 7.138-7.137.007-.005-2.141-2.141-7.143 7.143Zm1.433 4.261L2 12.852.051 18.684a1 1 0 0 0 1.265 1.264L7.147 18l-2.575-2.571Zm14.249-14.25a4.03 4.03 0 0 0-5.693 0L11.7 2.611 17.389 8.3l1.432-1.432a4.029 4.029 0 0 0 0-5.689Z"></path>
            </svg>
        </twig:Button>
        <twig:Modal :allowSmallWidth="true">
            <twig:block name="trigger">
                <button
                        class="ml-4 text-red-400 hover:text-red-600"
                        data-action="modal#open"
                >
                    <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true"
                         xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M1 5h16M7 8v8m4-8v8M7 1h4a1 1 0 0 1 1 1v3H6V2a1 1 0 0 1 1-1ZM3 5h12v13a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V5Z"></path>
                    </svg>
                </button>
            </twig:block>

            <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                 stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
                <path d="M12 9v4"></path>
                <path d="M12 16v.01"></path>
            </svg>

            <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">
                Delete this video???
            </h3>

            <div class="flex justify-between">
                <form method="dialog">
                    <twig:Button variant="link">Cancel</twig:Button>
                </form>
                {{ include('video/_delete_form.html.twig', { item: item }) }}
            </div>
        </twig:Modal>
    </td>
</tr>