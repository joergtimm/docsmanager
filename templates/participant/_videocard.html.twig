<div class="mb-2 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-50 p-6 m-3 border-2 border-gray-900 shadow shadow-sm hover:shadow-lg">
    <div class="flex items-center justify-between">
        <div class="flex items-center">
            <img class="mr-2 h-12 w-12 rounded-full object-cover" src="{{ vich_uploader_asset(partic.actor) }}" alt="{{ partic.actor.id }}-{{ partic.actor.name }}" />
            <div>
                <h3 class="text-base font-semibold text-gray-900 dark:text-gray-50">{{ partic.actor.name }}</h3>
            </div>
        </div>
    </div>
    <turbo-frame id="doc-list-items" class="flex items-end justify-end">
        {% for doc in partic.documents %}
            {{ include('documents/_badge.html.twig', { doc: doc}) }}
        {% endfor %}
    </turbo-frame>
</div>

