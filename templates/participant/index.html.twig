{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Participant index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>FirstName</th>
            <th>BornAt</th>
            <th>BirthName</th>
            <th>IdType</th>
            <th>IdNumber</th>
            <th>CreateAt</th>
            <th>UpdateAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.name }}</td>
                <td>{{ participant.firstName }}</td>
                <td>{{ participant.bornAt ? participant.bornAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ participant.birthName }}</td>
                <td>{{ participant.idType }}</td>
                <td>{{ participant.idNumber }}</td>
                <td>{{ participant.createAt ? participant.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ participant.updateAt ? participant.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}">show</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_participant_new') }}">Create new</a>
{% endblock %}
