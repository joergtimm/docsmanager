{% extends 'modalBase.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block main_content %}
    <div class="m-4 p-4 modal:m-0 modal:p-0 bg-gray-50 rounded-lg">
        <div class="flex justify-between">
            <h1 class="text-xl font-semibold text-gray-800 mb-4">Edit User</h1>

            <div class="mr-4">
                <a href="{{ path('app_user_index') }}" class="text-sm font-medium text-gray-800">
                    Back to list
                </a>
                <div class="inline-block">
                    {% if form.vars.data.id|default %}
                        {{ include('user/_delete_form.html.twig', { item: user}) }}
                    {% endif %}
                </div>
            </div>
        </div>
        {{ include('user/_form.html.twig') }}
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="update" target="modal">
        <template></template>
    </turbo-stream>
    <turbo-stream action="replace" target="user-list-item-{{ item.id }}">
        <template>{{ include('user/_row.html.twig') }}</template>
    </turbo-stream>
{% endblock %}