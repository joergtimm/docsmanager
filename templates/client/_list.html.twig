{% import '_macros.html.twig' as colheader %}
<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
        <th scope="col" class="p-4">
            <div class="flex items-center">
                <input id="checkbox-all-search" type="checkbox"
                       class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                       data-checkbox-select-all-target="checkboxAll"
                >
                <label for="checkbox-all-search" class="sr-only">checkbox</label>
            </div>
        </th>
        <th scope="col" class="px-6 py-3">
            <div class="flex items-center">
                <a href="{{ path('app_client_index', {
                    ...app.request.query.all(),
                    sort: 'Name',
                    sortDirection: sort == 'Name' and sortDirection == 'asc' ? 'desc' : 'asc',
                }) }}">
                    Name {{ colheader.sortArrow('Name', sort, sortDirection) }}
                </a>
            </div>
        </th>
        <th scope="col" class="px-6 py-3">
            <div class="flex items-center">
                <a href="{{ path('app_client_index', {
                    ...app.request.query.all(),
                    sort: 'company',
                    sortDirection: sort == 'company' and sortDirection == 'asc' ? 'desc' : 'asc',
                }) }}">
                    Company {{ colheader.sortArrow('company', sort, sortDirection) }}
                </a>
            </div>
        </th>
        <th scope="col" class="px-6 py-3">
            <div class="flex items-center">
                <a href="{{ path('app_client_index', {
                    ...app.request.query.all(),
                    sort: 'country',
                    sortDirection: sort == 'country' and sortDirection == 'asc' ? 'desc' : 'asc',
                }) }}">
                    Country {{ colheader.sortArrow('country', sort, sortDirection) }}
                </a>
            </div>
        </th>
    </thead>
    <tbody>
    {% for item in pager %}
        {{ include('client/_row.html.twig') }}
    {% endfor %}
    </tbody>
</table>