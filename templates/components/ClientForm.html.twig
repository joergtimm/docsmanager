<div {{ attributes }}>
    {{ form_start(form) }}
    <div class="grid grid-cols-2 gap-4 mb-4">
        <div
                class="rounded-lg border-gray-300 dark:border-gray-600 h-48 md:h-72"
        >
            {{ form_row(form.name) }}
            {{ form_row(form.conId) }}
            {{ form_row(form.customNr) }}
            {{ form_row(form.status) }}
        </div>
        <div
                class="rounded-lg border-gray-300 dark:border-gray-600 h-48 md:h-72"
        >,,
        </div>
    </div>

    <div class="flex items-center space-x-4">
        <twig:Button
                formvalidate
                variant="success"
                class="hover:animate-wiggle"
        >
            {{ button_label|default('Save') }}
        </twig:Button>
    </div>
    {{ form_end(form) }}
</div>