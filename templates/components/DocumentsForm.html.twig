<div {{ attributes }}>
    {{ form_start(form) }}
    <div class="grid grid-cols-2 gap-4 mb-4">
        <div
                class="rounded-lg border-gray-300 dark:border-gray-600"
        >
            {{ form_row(form.isValid) }}
            {{ form_row(form.imageFile) }}

        </div>
        <div
                class="rounded-lg border-gray-300 dark:border-gray-600"
        >
            <div class="bg-gray-500 p-6 w-full">
                <div class="relative mt-5">
                    <div class="absolute inset-0 flex items-center" aria-hidden="true">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center">
                        <span class="bg-white px-2 text-lg text-gray-500">Document</span>
                    </div>
                </div>
                <div class="bg-gray-200  shadow shadow-lg p-3">
                    <ul class="list-none">
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'Type', value: this.initialFormData.type }) }}
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'Last Update', value: this.initialFormData.updatedAt|date('d.m.Y') }) }}
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'Unique ID', value: this.initialFormData.documentKey }) }}

                        <li class="border-b-2 border-gray-900 flex items-center justify-between">
                            <span>
                                Is Valid
                            </span>
                            <span>
                                {{ this.initialFormData.isValid ? include('_state-badge.html.twig', {value: true}) : include('_state-badge.html.twig', {value: false}) }}
                            </span>
                        </li>
                    </ul>
                </div>
                <div class="relative mt-5">
                    <div class="absolute inset-0 flex items-center" aria-hidden="true">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center">
                        <span class="bg-white px-2 text-lg text-gray-500">Video</span>
                    </div>
                </div>
                <div class="bg-gray-200  shadow shadow-lg p-3">
                    <ul class="list-none">
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'Title', value: this.initialFormData.videoActor.video.title }) }}
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'Create at', value: this.initialFormData.videoActor.video.createAt|date('d.m.Y') }) }}
                    </ul>
                </div>
                <div class="relative mt-5">
                    <div class="absolute inset-0 flex items-center" aria-hidden="true">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center">
                        <span class="bg-white px-2 text-lg text-gray-500">Actor</span>
                    </div>
                </div>
                <div class="bg-gray-200  shadow shadow-lg p-3">
                    <ul class="list-none">
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'Name', value: this.initialFormData.videoActor.actor.name }) }}
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'born at', value: this.initialFormData.videoActor.actor.bornAt|date('d.m.Y') }) }}
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'age', value: this.initialFormData.videoActor.actor.bornAt|age }) }}
                        {{ include('documents/_docinfo-row.html.twig', { lable: 'gender', value: this.initialFormData.videoActor.actor.gender }) }}
                    </ul>
                </div>

            </div>
        </div>
    </div>
    <div>
        <twig:Button
                formvalidate
                variant="success"
                class="hover:animate-wiggle"
        >
            {{ button_label|default('Save') }}
        </twig:Button>
    </div>
    {{ form_end(form) }}
</div>